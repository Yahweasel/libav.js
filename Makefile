dist/libav-$(LIBAVJS_VERSION)-%.thr.js: build/ffmpeg-$(FFMPEG_VERSION)/build-thr-%/libavformat/libavformat.a \
	build/exports-%.json src/pre.js build/post-%.js build/extern-post.js \
        src/bindings.c src/b-*.c
